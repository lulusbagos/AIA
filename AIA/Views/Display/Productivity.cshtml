function getBottom(pit, sektorId) {
    var link = '@Url.Action("Function", "Controller")';
    link = link.replace("Controller", "Display");
    link = link.replace("Function", "GetBottom");

    $.ajax({
        type: "GET",
        url: link + '?pit=' + pit,
        success: function (data) {
            if (data.status) {
                $("#" + sektorId).append(data.data);
            } else {
                alert(data.data);
            }
        }
    });
}

function getTop(sektor, a) {
