    <script>
        var a

        $(document).ready(function () {
            updateDateTime();
            updateRunningText();
            updateTheme()
            setInterval(updateDateTime, 1000);
            setInterval(updateRunningText, 15000);
        });

        function updateTheme() {
            const currentTime = new Date().getHours();
            const darkModeCheckbox = document.getElementById('dark-mode-check');
            const lightModeCheckbox = document.getElementById('light-mode-check');

            if (currentTime >= 5 && currentTime < 16) {
                // Daytime (5 AM to 5 PM), enable light mode
                lightModeCheckbox.checked = true;
                darkModeCheckbox.checked = false;
                enableLightMode();
            } else {
                // Nighttime (5 PM to 5 AM), enable dark mode
                lightModeCheckbox.checked = false;
                darkModeCheckbox.checked = true;
                enableDarkMode();
            }
        }

        function enableLightMode() {
            // Logika untuk mengaktifkan tema light
            document.body.classList.remove('dark-theme'); // Hapus kelas dark-theme jika ada
            // Tambahkan logika lain sesuai kebutuhan
        }

        function enableDarkMode() {
            // Logika untuk mengaktifkan tema dark
            document.body.classList.add('dark-theme'); // Tambahkan kelas dark-theme
            // Tambahkan logika lain sesuai kebutuhan
        }


        function formatDate(date) {
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return date.toLocaleDateString('id-ID', options);
        }

        // Function to get the shift based on the current hour
        function getShift() {
            const currentHour = new Date().getHours();

            if (currentHour >= 7 && currentHour < 16) {
                return 'Shift 1';
            } else if (currentHour >= 16 && currentHour < 23) {
                return 'Shift 2';
            } else {
                return 'Shift 3';
            }
        }

        // Function to update the datetimeContainer
        function updateDateTimeContainer() {
            const datetimeContainer = document.getElementById('datetimeContainer');
            const currentDate = new Date();
            const formattedDate = formatDate(currentDate);
            const currentShift = getShift();

            datetimeContainer.textContent = `${formattedDate} - ${currentShift}`;
        }

        // Function to update datetimeContainer at specified interval
        function updateDateTime() {
            updateDateTimeContainer();
            setInterval(updateDateTimeContainer, 60000); // Update every minute (you can adjust the interval)
        }

        function updateRunningText() {
            $.ajax({
                url: '/Display/GetRunning',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.status) {
                        var runningContainer = $('#running');

                        // Clear existing content
                        runningContainer.empty();

                        // Populate running text
                        for (var i = 0; i < data.data.length; i++) {
                            var spanElement = $('<span>').text(data.data[i].text);
                            runningContainer.append(spanElement);
                        }

                        // Panggil plugin jQuery Marquee
                        runningContainer.marquee({
                            duration: 10000,  // Durasi perputaran (ms)
                            gap: 0,          // Jarak antar elemen (px) set menjadi 0
                            duplicated: false // Duplikasi elemen untuk efek tak terputus
                        });
                    } else {
                        console.error('Gagal mengambil data teks berjalan:', data.remarks);
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.error('Kesalahan mengambil data teks berjalan:', errorThrown);
                }
            });
        }


    </script>
